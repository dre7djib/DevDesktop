<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DevDesktop_CamaraDjibril.Pages.DetailFilmPage">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Image Source="{Binding poster_path}" Aspect="AspectFill" HeightRequest="300"/>
        <Label Text="{Binding title}" FontSize="24" FontAttributes="Bold" TextColor="Black"/>
        <Label Text="{Binding description}" FontSize="16" TextColor="Gray"/>
        <Label Text="{Binding id}" FontSize="16" TextColor="Gray"/>
    </VerticalStackLayout>
</ContentPage>
